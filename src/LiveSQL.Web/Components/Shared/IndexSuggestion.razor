@namespace LiveSQL.Web.Components.Shared

<div class="index-suggestion">
    <div class="index-header">
        <svg width="16" height="16" viewBox="0 0 20 20" fill="#3fb950">
            <path fill-rule="evenodd" d="M5 2a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2V4a2 2 0 00-2-2H5zm4.707 3.707a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L8.414 9H10a3 3 0 013 3v1a1 1 0 102 0v-1a5 5 0 00-5-5H8.414l1.293-1.293z" clip-rule="evenodd"/>
        </svg>
        <span class="index-table">@Suggestion.TableName</span>
        @if (Suggestion.EstimatedImprovement > 0)
        {
            <span class="index-improvement">~@Suggestion.EstimatedImprovement.ToString("F0")% faster</span>
        }
    </div>
    <div class="index-reason">@Suggestion.Reason</div>
    <div class="index-sql">
        <div class="index-sql-header">
            <span>Suggested Index</span>
            <button class="btn-copy" @onclick="CopyToClipboard">Copy</button>
        </div>
        <pre><code>@Suggestion.CreateIndexSql</code></pre>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public IndexSuggestionData Suggestion { get; set; } = default!;
    [Inject] private IJSRuntime JS { get; set; } = default!;

    private async Task CopyToClipboard()
    {
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", Suggestion.CreateIndexSql);
    }
}
