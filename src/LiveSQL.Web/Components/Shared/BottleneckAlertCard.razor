@namespace LiveSQL.Web.Components.Shared

<div class="bottleneck-alert bottleneck-@Alert.Severity.ToLowerInvariant()">
    <div class="bottleneck-header">
        <span class="bottleneck-badge badge-@Alert.Severity.ToLowerInvariant()">@Alert.Severity</span>
        <span class="bottleneck-impact">@Alert.ImpactPercentage.ToString("F0")% impact</span>
    </div>
    <div class="bottleneck-title">@Alert.Title</div>
    <div class="bottleneck-desc">@Alert.Description</div>
    @if (!string.IsNullOrEmpty(Alert.Recommendation))
    {
        <div class="bottleneck-recommendation">
            <svg width="14" height="14" viewBox="0 0 20 20" fill="currentColor" class="recommendation-icon">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            @Alert.Recommendation
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired] public BottleneckAlert Alert { get; set; } = default!;
}
